<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <CheckBox
        android:id="@+id/vegeCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="242dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="242dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="21dp"
        android:text="Vegetarian"
        app:layout_constraintBottom_toTopOf="@+id/veganCB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <CheckBox
        android:id="@+id/veganCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="270dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="270dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        android:text="Vegan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vegeCB" />

    <CheckBox
        android:id="@+id/lactoseIntCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="195dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="195dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="7dp"
        android:text="Lactose Intolerant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/veganCB" />

    <CheckBox
        android:id="@+id/gluent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="238dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="238dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="7dp"
