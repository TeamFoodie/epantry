<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/realbg"
    tools:context=".UserLoginActivity">


    <Button
        android:id="@+id/BtoSignup"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginBottom="168dp"
        android:background="@android:color/transparent"
        android:onClick="onClick"
        android:text="No account yet? Create one"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bsignup"
        app:layout_constraintVertical_bias="0.166" />

    <EditText
        android:id="@+id/TFloginUsername"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_marginTop="192dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TFloginPassword"
        android:layout_width="300dp"
        android:layout_height="34dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TFloginUsername" />

    <Button
        android:id="@+id/Blogin"
        android:layout_width="300dp"
        android:layout_height="31dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:background="@color/colorPrimary"
        android:onClick="onClick"
        android:text="Login"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TFloginPassword"
        app:layout_constraintVertical_bias="0.132" />

</android.support.constraint.ConstraintLayout>